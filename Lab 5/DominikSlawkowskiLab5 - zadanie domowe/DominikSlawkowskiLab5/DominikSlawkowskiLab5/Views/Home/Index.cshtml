@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Raves</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Genres</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: genres">
                    <li>
                        <strong><span data-bind="text: DjId"></span></strong>: <span data-bind="text: Name"></span>
                        <small><a href="#" data-bind="click: $parent.getGenreDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div> 
            <table class="table">
                <tr><td>Dj</td><td data-bind="text: detail().DjName"></td></tr>
                <tr><td>Genre</td><td data-bind="text: detail().Name"></td></tr>
                <tr><td>Year</td><td data-bind="text: detail().Year"></td></tr>
                <tr><td>BPM</td><td data-bind="text: detail().BpmAmount"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->
    <div class="col-md-4">
        <!-- TODO: Add new book -->
    </div>
</div>